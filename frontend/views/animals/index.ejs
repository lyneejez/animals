<div class="animals-wrapper">
    <h4 class="mb-3"> animal list</h4>
    <div class="animals">
        <table class="table table-dark table-striped">
        <thead class="table-light">
            <tr>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Classification</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
                <% animals.forEach(function(animal){ %>

            <tr>
                <td><%= animal.title %></td>
                <td><%= animal.category %></td>
                <td><%= animal.classification %></td>

                <td>
                    <a class="text-info-emphasis" href="/<%= animal.id %>/edit"><i class="bi bi-pencil-square"></i></a>
                    <a class="text-info-emphasis" href="/<%= animal.id %>/delete"><i class="bi bi-x-circle-fill"></i></a>
                </td>
            </tr>
            <% }) %>
        </tbody>
        </table>
    </div>
    <div class="mt-3">
        <a href="/create" class="btn btn_small btn-primary"> add to animal</a>
    </div>
</div>